server {
    listen 80;
    server_name _;
    location / {
	return 301 https://$host$request_uri;
    }
}
server {
    listen 443 ssl;

    ssl_certificate /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/server.key;

    location / {
        proxy_pass http://${MEALIE_HOST}:${MEALIE_PORT};
        proxy_http_version 1.1;
    }
}
